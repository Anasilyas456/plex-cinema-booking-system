#include <iostream>
using namespace std;

class user {
public:
    string user_name;
    string user_email;

    void user_details() {
        cout << "Enter your name: ";
        cin >> user_name;
        cout << "Enter your working email: ";
        cin >> user_email;
        cout << endl;
    }
};

class movie : public user {
public:
    int m;
    int seat_number;
    int language;
    int time;
    string movie_name;
    string movie_language;

    void am() {
        cout << "\nAvailable movies for Today:\n";
        cout << "1. Interstellar\n2. AVATAR\n3. Cyber Hell\nChoose (1-3): ";
        cin >> m;

        cout << "\nSelect the movie show time (1-3):\n";
        cout << "1. 08:00 AM\n2. 03:00 PM\n3. 07:00 PM\n";
        cin >> time;

        cout << "\nSelect your language:\n1. English\n2. Urdu\nChoose (1 or 2): ";
        cin >> language;

        switch (m) {
        case 1:
            movie_name = "Interstellar";
            break;
        case 2:
            movie_name = "AVATAR";
            break;
        case 3:
            movie_name = "Cyber Hell";
            break;
        default:
            movie_name = "Unknown";
            cout << "Invalid movie choice.\n";
        }

        switch (time) {
        case 1:
            cout << "40 seats are available at this time.\n";
            break;
        case 2:
            cout << "30 seats are available at this time.\n";
            break;
        case 3:
            cout << "50 seats are available at this time.\n";
            break;
        default:
            cout << "Invalid time selected.\n";
        }

        switch (language) {
        case 1:
            movie_language = "English";
            break;
        case 2:
            movie_language = "Urdu";
            break;
        default:
            movie_language = "Unavailable";
            cout << "No other language is available.\n";
        }

        cout << "Which seat number do you want to book? ";
        cin >> seat_number;
    }
};

class customer : public movie {
public:
    void ud() {
        cout << "\n--- Booking Summary ---\n";
        cout << "Customer Name: " << user_name << endl;
        cout << "Customer Email: " << user_email << endl;
        cout << "Movie Selected: " << movie_name << endl;
        cout << "Language: " << movie_language << endl;
        cout << "Seat Number: " << seat_number << endl;

        // Ticket price
        int ticket_price = 600;
        cout << "\nThe ticket price for this movie is Rs. " << ticket_price << "." << endl;

        // Ask user to confirm
        string confirm;
        cout << "Do you want to confirm the booking? (yes/no): ";
        cin >> confirm;

        if (confirm == "yes" || confirm == "Yes") {
            cout << "Booking successfully! Your seat has been reserved.\n";
        } else {
            cout << "Booking cancelled.\n";
        }
    }
};

int main() {
    cout << "--------- Welcome to Plex Cinema ---------\n\n";

    customer m;
    m.user_details();
    m.am();
    m.ud();

    return 0;
}
